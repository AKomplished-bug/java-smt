<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0"
    xmlns:e="http://ant.apache.org/ivy/extra"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">
    <info organisation="org.sosy_lab" module="javasmt-yices2">
        <license name="Apache2 and GNU GPLv3" url="https://github.com/SRI-CSL/yices2/blob/master/LICENSE.txt"/>
        <description>
            JavaSMT components for the Yices2 solver.
            Seperated from the main package of JavaSMT because of the licence.
        </description>
    </info>

    <configurations>
        <conf name="javasmt-yices2" />
    </configurations>

    <publications defaultconf="javasmt-yices2">
        <artifact name="javasmt-yices2" conf="javasmt-yices2" ext="jar"/>
        <artifact name="javasmt-yices2" conf="javasmt-yices2" e:classifier="sources" ext="jar"/>
    </publications>

    <dependencies>
        <dependency org="org.sosy_lab" name="javasmt-solver-yices2" rev="2.6.2-83-g084019ce" conf="javasmt-yices2->solver-yices2" />

        <!--
        There are a few dependencies for this package, like Google-Guava and JUnit.
        As this package is only intended for use within JavaSMT and JavaSMT already
        includes those dependencies, we do not list them here explicitly.
        -->
    </dependencies>

</ivy-module>
