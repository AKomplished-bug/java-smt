<ivy-module version="2.0"
    xmlns:e="http://ant.apache.org/ivy/extra"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">
    <info organisation="org.sosy_lab" module="javasmt-solver-mathsat">
        <license name="For research and evaluation purposes only" url="http://mathsat.fbk.eu/download.html"/>
        <description>
            MathSAT solver and the JavaSMT JNI wrapper.
        </description>
    </info>

    <configurations>
        <!-- meta configuration for general usage on multiple platforms -->
        <conf name="solver-mathsat" extends="solver-mathsat-linux-x86_64,solver-mathsat-windows-x86_64"/>

        <!-- single configurations for usage -->
        <conf name="solver-mathsat-linux-x86_64" />
        <conf name="solver-mathsat-linux-aarch64" />
        <conf name="solver-mathsat-windows-x86_64" />
    </configurations>

    <publications defaultconf="solver-mathsat">
        <!-- Linux64 files -->
        <artifact name="libmathsat5j" conf="solver-mathsat-linux-x86_64" type="shared-object" ext="so" e:arch="x86_64"/>
        <!-- Linux for ARMv8/aarch64 -->
        <artifact name="libmathsat5j" conf="solver-mathsat-linux-aarch64" type="shared-object" ext="so" e:arch="aarch64"/>
        <!-- Windows64 files -->
        <artifact name="mathsat5j" conf="solver-mathsat-windows-x86_64" type="dll" ext="dll" e:arch="x86_64"/>
        <artifact name="mathsat"   conf="solver-mathsat-windows-x86_64" type="dll" ext="dll" e:arch="x86_64"/>
        <artifact name="mpir"      conf="solver-mathsat-windows-x86_64" type="dll" ext="dll" e:arch="x86_64"/>
    </publications>
    <dependencies></dependencies>

</ivy-module>
